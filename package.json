{
  "name": "@explorins/near-lib",
  "version": "0.0.3",
  "description": "Explorins lib to interact with mintbase & near",
  "main": "lib/index.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "restricted"
  },
  "module": "lib/index.esm.js",
  "scripts": {
    "build": "tsc && npm run build:js",
    "watch": "tsc -w && npm run build:js",
    "test": "echo \"No test specified\"",
    "dev": "nodemon --exec npm run build",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "doc": "typedoc --out docs src && touch docs/.nojekyll",
    "start:docs": "http-server ./docs"
  },
  "keywords": [
    "NFT",
    "Blockchain"
  ],
  "author": "@explorins",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daniel-explorins/near-lib"
  },
  "files": [
    "package.json",
    "lib"
  ],
  "nodemonConfig": {
    "watch": [
      "src/*"
    ],
    "ext": "ts"
  },
  "np": {
    "tests": false
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bn.js": "^5.1.0",
    "@types/browser-or-node": "^1.3.0",
    "@types/jest": "^26.0.22",
    "@types/node-fetch": "^2.5.8",
    "@types/regenerator-runtime": "^0.13.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-inline-dotenv": "^1.6.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-node-env-inline": "^0.4.3",
    "browserify": "^17.0.0",
    "eslint": "^7.22.0",
    "esmify": "^2.1.1",
    "http-server": "^0.12.3",
    "jest": "^26.6.3",
    "nock": "^13.0.11",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "tinyify": "^3.0.0",
    "ts-jest": "^26.5.3",
    "tslint": "^6.1.3",
    "typedoc": "^0.21.9",
    "typescript": "^4.2.4",
    "uglifyify": "^5.0.2"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "bn.js": "^5.2.1",
    "graphql-request": "^4.3.0",
    "mintbase": "^0.7.0",
    "near-api-js": "^0.45.1",
    "retry": "^0.13.1",
    "rxjs": "^7.5.6",
    "urlcat": "^2.0.4"
  }
}
